<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="16dp"
    tools:context="a6im7.calculadora6im7.MainActivity"
    android:background="@drawable/fondo4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:fontFamily="sans-serif-condensed"
        android:text="Bienvenido"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:id="@+id/TextViewBien" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="26dp"
        android:id="@+id/usrText"
        android:layout_below="@+id/TextViewUsr"
        android:layout_centerHorizontal="true"
        android:background="?attr/colorButtonNormal"
        android:textSize="24sp"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEntrar"
        android:elevation="0dp"
        android:textSize="22sp"
        android:background="@drawable/botoniniciar"
        android:layout_alignLeft="@+id/textViewPasw"
        android:layout_alignStart="@+id/textViewPasw"
        android:layout_below="@+id/PaswText"
        android:layout_alignRight="@+id/TextViewUsr"
        android:layout_alignEnd="@+id/TextViewUsr"
        android:onClick="onClick (MainActivity)"
        android:textAllCaps="false" />

    <TextView
        android:text="Pasword:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewPasw"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_below="@+id/usrText"
        android:layout_alignLeft="@+id/TextViewUsr"
        android:layout_alignStart="@+id/TextViewUsr"
        android:layout_marginTop="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_marginTop="21dp"
        android:id="@+id/PaswText"
        android:textSize="24sp"
        android:background="?attr/colorButtonNormal"
        android:layout_below="@+id/textViewPasw"
        android:layout_alignLeft="@+id/usrText"
        android:layout_alignStart="@+id/usrText" />

    <TextView
        android:text="Usuario:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewUsr"
        android:textSize="25sp"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/TextViewBien"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
